{{/* <!--
	
	f/getpicturepath
	
	Gets url for pages and data files.
	
	Arguments:
	- . as .Page for pages or . as Data for data files
	
	Process:
	- If page:
		- use .Permalink
	- If data:
		- use .url

 --> */}}

{{ $result := "" }}
{{ if partial "f/ispage" . }}
	{{ $result = .RelPermalink }}
{{ else if isset . "link" }}
	{{ $result = .link }}
{{ else }}
	{{/* <!-- else this is a site.Data file --> */}}
	{{ $result = .url }}
{{ end }}

{{ return $result }}