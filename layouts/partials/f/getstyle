{{/* <!--
	
	f/getstyle

	Parameters:
	- . as .Page or .Data object
	
	Returns:
	- .style attribute

 --> */}}

{{ $style := "" }}
{{ if (partial "f/ispage" .) }}
	{{ with .Params.style }}
		{{ $style = . }}
	{{ end }}
{{ else }}
	{{ with .style }}
		{{ $style = . }}
	{{ end }}
{{ end }}
{{ return $style }}